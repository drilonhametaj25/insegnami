{
  "name": "insegnami-pro",
  "version": "0.1.0",
  "description": "InsegnaMi.pro - School Management & Electronic Register System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/seed.ts",
    "dev:setup": "powershell -ExecutionPolicy Bypass -File scripts/dev-setup.ps1",
    "quick-start": "powershell -ExecutionPolicy Bypass -File scripts/quick-start.ps1",
    "dev:services": "cd docker && docker-compose up -d postgres redis mailhog",
    "dev:stop": "cd docker && docker-compose down",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e"
  },
