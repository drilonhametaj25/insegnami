# Application Mode (self-hosted or saas)
MODE=self-hosted

# Database
DATABASE_URL="postgresql://insegnami_user:insegnami_password@localhost:5432/insegnami_db?schema=public"

# Auth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# Redis
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@insegnami.pro

# Application Settings
APP_NAME="InsegnaMi.pro"
APP_URL=http://localhost:3000
SUPPORT_EMAIL=support@insegnami.pro

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# Worker/Queue Settings
WORKER_CONCURRENCY=5

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Development
NODE_ENV=development
LOG_LEVEL=info

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
HOTJAR_ID=

# PWA Settings
PWA_ENABLED=true
